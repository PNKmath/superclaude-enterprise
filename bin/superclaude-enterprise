#!/usr/bin/env node

// Change to the package directory to ensure proper module resolution
const path = require('path');
const fs = require('fs');

// Find the actual package directory
let packageDir = __dirname;
while (!fs.existsSync(path.join(packageDir, 'package.json')) && packageDir !== '/') {
  packageDir = path.dirname(packageDir);
}

// Change to package directory for proper module resolution
process.chdir(packageDir);

// Now require the main module
require('../dist/index.js');